<mujoco>
 <visual>
<headlight ambient="0.5 0.5 0.5"/>
 </visual>
	<option timestep="0.001" integrator="RK4" gravity="0 0 -9.81">
		<flag sensornoise="disable" contact="enable" energy="enable"/>
	</option>

	<worldbody>
    <!-- <light diffuse=".5 .5 .5" pos="0 0 3" dir="0 0 -1"/> -->
